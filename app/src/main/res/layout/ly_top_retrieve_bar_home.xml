<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/retrieve_bar_height"
    android:background="@color/transparent"
    android:orientation="horizontal">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_side_menu"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="6dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_student"
        app:riv_border_color="@color/black_alpha"
        app:riv_border_width="1dp"
        app:riv_oval="true" />


    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/riv_side_menu"
        android:background="@drawable/bg_input"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="1dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/ai_search" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/ib_filter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="end|center"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_app_icon" />

</RelativeLayout>