<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/hermitcrab_retrieve_bar_height"
    android:stretchColumns="1">

    <TableRow
        android:gravity="center_vertical"
        tools:ignore="UselessParent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/rivSideMenu"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="6dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_student"
            app:riv_border_color="@color/black_alpha"
            app:riv_border_width="1dp"
            app:riv_oval="true" />

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/tlCategoryTab"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            app:layout_constraintBottom_toTopOf="@+id/vpCommunity"
            app:layout_constraintTop_toTopOf="parent"
            app:tl_indicator_style="TRIANGLE"
            app:tl_textBold="SELECT"
            app:tl_textUnselectColor="@color/black_light"
            app:tl_textsize="@dimen/hermitcrab_font_16" />


        <ImageView
            android:id="@+id/ivInform"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end|center"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/hermitcrab_inform_icon" />

    </TableRow>
</TableLayout>