<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/hermitcrab_retrieve_bar_height"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/ib_personal_side_menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="6dp"
        android:background="@color/transparent"
        android:contentDescription="@null"
        android:padding="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ai_menu" />


    <ImageButton
        android:id="@+id/ib_personal_theme"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/ib_personal_setting"
        android:background="@color/transparent"
        android:contentDescription="@null"
        android:src="@drawable/ai_theme" />

    <ImageButton
        android:id="@+id/ib_personal_setting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:contentDescription="@null"
        android:src="@drawable/ai_personal_setting" />

</RelativeLayout>