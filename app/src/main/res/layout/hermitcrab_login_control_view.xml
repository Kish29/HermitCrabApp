<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
        android:id="@+id/cpbLogin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginStart="94dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="94dp"
        android:background="@drawable/bg_login_button"
        android:elevation="0dp"
        android:outlineProvider="none"
        android:text="@string/hermitcrab_login_title"
        android:textColor="@color/white"
        android:textSize="@dimen/hermitcrab_font_18"
        app:initialCornerAngle="@dimen/hermitcrab_corner_radius"
        app:spinning_bar_color="@color/white"
        app:spinning_bar_padding="10dp"
        app:spinning_bar_width="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_vertical"
        android:text="@string/hermitcrab_resister_hint"
        android:textColor="@color/white" />

    <!--注册按钮-->
    <Button
        android:id="@+id/btnGotoRegister"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="94dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="94dp"
        android:background="@drawable/btn_register_submit"
        android:elevation="0dp"
        android:outlineProvider="none"
        android:text="@string/hermitcrab_register_title"
        android:textColor="@color/black"
        android:textSize="@dimen/hermitcrab_font_18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_remember_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:button="@drawable/ic_checkbox_selector"
            android:checked="true"
            android:contentDescription="@null"
            android:textColor="@color/black"
            android:textSize="@dimen/hermitcrab_font_12"
            android:visibility="visible" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/hermitcrab_remember_hint"
            android:textColor="@color/white"
            android:textSize="@dimen/hermitcrab_font_16"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="4dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="4dp"
            android:text="@string/hermitcrab_forget_password"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>