<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/hermitcrab_retrieve_bar_height"
    android:gravity="center_vertical|center"
    android:orientation="horizontal"
    tools:background="@color/colorPrimary">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/rivSideMenu"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="6dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_student"
        app:riv_border_color="@color/black_alpha"
        app:riv_border_width="1dp"
        app:riv_oval="true" />

    <ImageView
        android:id="@+id/ivContact"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/hermitcrab_item_margin"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/ai_contact" />

</RelativeLayout>

