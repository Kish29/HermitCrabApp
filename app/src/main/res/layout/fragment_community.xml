<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_community"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.community.CommunityFragment">

    <!-- 添加另外一个子类布局，该子类布局动态获取设备的statusBar的高度，
         并赋值给paddingBottom，留出statusBar的高度，并且还能显示背景图 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_sub_constraint_layout_for_padding_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/top_retrieve_bar"
            layout="@layout/ly_top_retrieve_bar_home" />

        <!-- 顶部的TabBar -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_category_tab"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            app:layout_constraintTop_toBottomOf="@+id/top_retrieve_bar" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_content_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tl_category_tab"
            app:layout_constraintVertical_weight="1">

            <View
                android:id="@+id/v_layer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false"
                android:focusableInTouchMode="false" />

        </androidx.viewpager.widget.ViewPager>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
