<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.impl.HomeFragmentImpl">

    <!-- 添加另外一个子类布局，该子类布局动态获取设备的statusBar的高度，
         并赋值给paddingBottom，留出statusBar的高度，并且还能显示背景图 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_sub_constraint_layout_for_padding_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/ly_top_bar_navigation" />

        <!-- 顶部的TabBar -->
        <TableLayout
            android:id="@+id/vp_nav_tab_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_sub_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>