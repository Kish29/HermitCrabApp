<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.home.HomeFragment">

    <!-- 添加另外一个子类布局，该子类布局动态获取设备的statusBar的高度，
         并赋值给paddingBottom，留出statusBar的高度，并且还能显示背景图 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_fragment_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:translationY="60dp">
            <!-- 顶部的TabBar -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tl_category_tab"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                app:layout_constraintBottom_toTopOf="@+id/vp_content_list"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vp_content_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tl_category_tab"
                app:layout_constraintVertical_weight="1" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/top_retrieve_bar"
            layout="@layout/ly_top_retrieve_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>