<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:gravity="center_vertical|center"
    android:orientation="horizontal">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_side_menu"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="6dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/login_background"
        app:riv_border_color="@color/black_alpha"
        app:riv_border_width="1dp"
        app:riv_oval="true" />

    <ImageButton
        android:id="@+id/ib_personal_theme"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null" />

    <ImageButton
        android:id="@+id/ib_personal_setting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/ib_personal_theme"
        android:contentDescription="@null" />

</RelativeLayout>

