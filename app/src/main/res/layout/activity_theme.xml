<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_general_grey">

    <com.kish2.hermitcrabapp.custom.view.StatusFixedToolBar
        android:id="@+id/sft_toolbar_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/retrieve_bar_height"
        android:theme="@style/ToolbarItemThem"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_theme_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="主题颜色"
        android:textSize="@dimen/font_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sft_toolbar_top" />

    <LinearLayout
        android:id="@+id/ll_theme_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/tv_theme_title">


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_color_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="scrollable" />

        <q.rorbin.verticaltablayout.VerticalTabLayout
            android:id="@+id/vtl_color_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tab_margin="12dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_theme_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_theme_container" />

</androidx.constraintlayout.widget.ConstraintLayout>