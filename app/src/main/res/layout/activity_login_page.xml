<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--<include layout="@layout/bg_video_for_login" />-->

    <!--上方主要登录界面-->
    <LinearLayout
        android:id="@+id/login_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/login_background"
        android:orientation="vertical"
        android:paddingBottom="16dp">


        <!--登录用户名、邮箱、手机号输入框界面-->
        <LinearLayout
            android:id="@+id/lay_identify"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/login_input_widget_type"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/identify_input_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:contentDescription="@null"
                app:srcCompat="@mipmap/login_identify_icon" />

            <!--小竖线-->
            <View
                android:layout_width="1px"
                android:layout_height="22dp"
                android:background="@color/line_grey" />

            <!--ems为控件最大宽度，此处15表示最大15个字符的宽度-->
            <!--background:@null不要下划线-->
            <!--imeOption表示输入框输入完成后，输入法的右下角按钮功能
                actionDone:完成
                actionNext:下一行
                actionSend:发送数据-->
            <EditText
                android:id="@+id/identify_input"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:autofillHints="@string/prompt_mobile"
                android:background="@null"
                android:ems="15"
                android:focusable="true"
                android:hint="@string/prompt_mobile"
                android:imeOptions="actionNext"
                android:inputType="textPhonetic"
                android:lines="1"
                android:maxLines="1"
                android:minLines="1"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/font_16"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <!--密码输入框-->
        <LinearLayout
            android:id="@+id/lay_password"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/login_input_widget_type"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/password_input_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:contentDescription="@null"
                app:srcCompat="@mipmap/login_password_icon" />

            <!--小竖线-->
            <View
                android:layout_width="1px"
                android:layout_height="22dp"
                android:background="@color/line_grey" />

            <EditText
                android:id="@+id/password_input"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:autofillHints="@string/prompt_password"
                android:background="@null"
                android:hint="@string/prompt_password"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLines="1"
                android:minLines="1"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/font_16"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/identify_input" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>