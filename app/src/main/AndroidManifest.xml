<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kish2.hermitcrabapp">

    <!-- 获取外存的读取权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 相机 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- Android API >=14 默认开启硬件加速-->
    <application
        android:name=".HermitCrabApp"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_app_icon"
        android:label="@string/app_name_zh"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/ic_app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppThemeBase"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:label"
        tools:targetApi="n">
        <!-- 应用的provider-->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.kish2.hermitcrabapp.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        <!-- 欢迎页 -->
        <activity
            android:name=".view.activities.HermitCrabSplash"
            android:launchMode="standard"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeBase.Fade.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 主页 -->
        <activity
            android:name=".view.activities.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeBase.Fade">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!--登录页面-->
        <activity
            android:name=".view.activities.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activities.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activities.ThemeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activities.UserProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".view.activities.MyTest"
            android:screenOrientation="portrait" />
    </application>

</manifest>